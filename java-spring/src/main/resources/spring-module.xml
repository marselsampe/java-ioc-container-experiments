<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="studentDAO" class="com.marselsampe.springtest.dao.MSSQLStudentDAO" />
  
	<bean id="studentManager" class="com.marselsampe.springtest.lib.StudentManager">
		<property name="studentDAO" ref="studentDAO" />
	</bean>
	
	<bean id="studentService" class="com.marselsampe.springtest.service.StudentService">
		<property name="studentManager" ref="studentManager" />
	</bean>

</beans>